<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#99000000">

    <com.google.android.material.card.MaterialCardView style="@style/AppTheme.MaterialCardView.White"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:paddingHorizontal="16dp"
                                                           android:paddingVertical="24dp">

            <TextView android:id="@+id/prof_test_title"
                      style="@style/AppTheme.H4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="Профориентация"
                      android:textAlignment="center"
                      app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:id="@+id/prof_test_subtitle"
                      style="@style/AppTheme.Body"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp"
                      android:gravity="center"
                      android:text="Чтобы мы узнали вас получше и предложили релевантный материал пройдите тест. Это займет не более 1 минуты."
                      android:textAlignment="center"
                      app:layout_constraintTop_toBottomOf="@id/prof_test_title"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/prof_test_start"
                                                               style="@style/AppTheme.Button.Base"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="24dp"
                                                               android:text="Начать"
                                                               app:layout_constraintTop_toBottomOf="@id/prof_test_subtitle"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/prof_test_close"
                                                               style="@style/AppTheme.Button.Base"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="4dp"
                                                               android:text="В другой раз"
                                                               android:textColor="@color/textSecondary"
                                                               app:backgroundTint="@color/background"
                                                               app:layout_constraintTop_toBottomOf="@id/prof_test_start"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>