<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#99000000">

    <com.google.android.material.card.MaterialCardView style="@style/AppTheme.MaterialCardView.White"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:paddingHorizontal="16dp"
                                                           android:paddingVertical="24dp">

            <TextView android:id="@+id/course_open_title"
                      style="@style/AppTheme.H4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="Бонусный материал"
                      android:textAlignment="center"
                      app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:id="@+id/course_open_subtitle"
                      style="@style/AppTheme.Body"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp"
                      android:gravity="center"
                      android:text="Вы можете открыть этот материал за бонусные баллы рейтинга."
                      android:textAlignment="center"
                      app:layout_constraintTop_toBottomOf="@id/course_open_title"/>

            <com.google.android.material.card.MaterialCardView android:id="@+id/course_open_available_container"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="24dp"
                                                               app:cardBackgroundColor="@color/bgIslandInner"
                                                               app:cardCornerRadius="@dimen/default_corner_radius"
                                                               app:cardElevation="0dp"
                                                               app:contentPadding="16dp"
                                                               app:layout_constraintTop_toBottomOf="@id/course_open_subtitle">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="match_parent">

                    <TextView android:id="@+id/course_open_available_title"
                              style="@style/AppTheme.Body"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="Доступно для открытия"
                              android:textAlignment="center"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView android:id="@+id/course_open_available_subtitle"
                              style="@style/AppTheme.BodyMedium"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="3 бонусных материала"
                              android:textAlignment="center"
                              android:textSize="24dp"
                              app:layout_constraintTop_toBottomOf="@id/course_open_available_title"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton android:id="@+id/course_open_open"
                                                               style="@style/AppTheme.Button.Base"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="24dp"
                                                               android:text="Открыть этот материал"
                                                               app:layout_constraintTop_toBottomOf="@id/course_open_available_container"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/course_open_back"
                                                               style="@style/AppTheme.Button.Base"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="4dp"
                                                               android:text="В другой раз"
                                                               android:textColor="@color/textSecondary"
                                                               app:backgroundTint="@color/background"
                                                               app:layout_constraintTop_toBottomOf="@id/course_open_open"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>