<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="152dp"
        android:layout_height="152dp"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardBackgroundColor="@color/bgIslandInner"
        app:cardElevation="0dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="114dp"
            android:layout_height="114dp"
            app:cardCornerRadius="57dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:id="@+id/feed_art_direction_item_image_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationY="20dp"
            android:translationX="20dp"/>

        <ImageView
                android:id="@+id/feed_art_direction_item_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitEnd"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/feed_art_direction_item_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/AppTheme.BodyMedium.Small"
                android:textColor="@color/textPrimary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>