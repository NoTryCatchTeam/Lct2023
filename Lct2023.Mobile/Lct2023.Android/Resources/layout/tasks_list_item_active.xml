<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/tasks_list_item_background_active"
                                                   android:clipToOutline="true"
                                                   android:paddingStart="8dp"
                                                   android:paddingTop="8dp">

    <TextView android:id="@+id/task_list_item_progress"
              style="@style/AppTheme.SecondaryMedium.Small"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="7/10"
              android:textColor="@color/textLight"
              app:layout_constraintEnd_toStartOf="@id/task_list_item_guideline_vertical"
              app:layout_constraintHorizontal_bias="0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0"/>

    <androidx.constraintlayout.widget.Guideline android:id="@+id/task_list_item_guideline_horizontal"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline android:id="@+id/task_list_item_guideline_vertical"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent=".3"/>

    <TextView android:id="@+id/task_list_item_number"
              style="@style/AppTheme.BodyBold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="3"
              android:textColor="#D0E4A4"
              android:textSize="60sp"
              android:textStyle="italic"
              android:translationX="2dp"
              android:translationY="14dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="1"
              app:layout_constraintStart_toEndOf="@id/task_list_item_guideline_vertical"
              app:layout_constraintTop_toBottomOf="@id/task_list_item_guideline_horizontal"
              app:layout_constraintVertical_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>

