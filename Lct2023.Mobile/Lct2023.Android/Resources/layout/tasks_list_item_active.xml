<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="100dp"
                                                   android:layout_height="100dp"
                                                   android:background="@drawable/tasks_list_item_background_active"
                                                   android:foreground="?attr/selectableItemBackground"
                                                   android:clipToOutline="true">

    <View android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintDimensionRatio="1:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/task_list_item_progress"
              style="@style/AppTheme.SecondaryMedium.Small"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              android:text="7/10"
              android:textColor="@color/textLight"
              app:layout_constraintBottom_toTopOf="@id/task_list_item_guideline_horizontal"
              app:layout_constraintHorizontal_bias="0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0"/>

    <androidx.constraintlayout.widget.Guideline android:id="@+id/task_list_item_guideline_horizontal"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent=".5"/>

    <TextView android:id="@+id/task_list_item_number"
              style="@style/AppTheme.BodyBold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:includeFontPadding="false"
              android:lines="1"
              android:text="133"
              android:textColor="#D0E4A4"
              android:textSize="60sp"
              android:textStyle="italic"
              android:translationY="14dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="1"
              app:layout_constraintTop_toBottomOf="@id/task_list_item_guideline_horizontal"
              app:layout_constraintVertical_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>

