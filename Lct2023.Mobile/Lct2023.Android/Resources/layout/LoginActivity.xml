<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton android:id="@+id/login_vk_sign_in"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:text="VK sign in"
                                                       app:layout_constraintBottom_toTopOf="@id/login_basic_sign_in"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintVertical_chainStyle="packed"/>

    <com.google.android.material.button.MaterialButton android:id="@+id/login_basic_sign_in"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:layout_marginTop="12dp"
                                                       android:text="Basic sign in"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/login_vk_sign_in"/>

</androidx.constraintlayout.widget.ConstraintLayout>