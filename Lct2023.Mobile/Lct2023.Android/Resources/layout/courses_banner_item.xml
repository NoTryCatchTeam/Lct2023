<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView android:layout_width="0dp"
               android:layout_height="0dp"
               android:scaleType="centerCrop"
               android:src="@drawable/image_courses_banner"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/courses_banner_item_text"
              style="@style/AppTheme.BodyMedium"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="16dp"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Мы открываем курс по гитаре и скрипке"
              android:textColor="@color/textLight"
              android:textSize="20sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent=".6"/>

    <com.google.android.material.card.MaterialCardView android:id="@+id/courses_banner_item_cta"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:layout_marginTop="16dp"
                                                       android:layout_marginBottom="32dp"
                                                       android:elevation="0dp"
                                                       app:cardBackgroundColor="@color/bgBrand"
                                                       app:cardCornerRadius="6dp"
                                                       app:cardElevation="0dp"
                                                       app:contentPaddingBottom="8dp"
                                                       app:contentPaddingLeft="16dp"
                                                       app:contentPaddingRight="16dp"
                                                       app:contentPaddingTop="8dp"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintStart_toStartOf="@id/courses_banner_item_text"
                                                       app:layout_constraintTop_toBottomOf="@id/courses_banner_item_text">

        <TextView style="@style/AppTheme.BodyMedium.Small"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Записаться!"
                  android:textColor="@color/textLight"/>

    </com.google.android.material.card.MaterialCardView>

    <ImageView android:id="@+id/courses_banner_item_image"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_marginStart="16dp"
               android:layout_marginEnd="16dp"
               android:layout_marginBottom="28dp"
               android:scaleType="fitEnd"
               android:src="@drawable/image_courses_banner_subimage"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/courses_banner_item_text"
               app:layout_constraintTop_toBottomOf="@id/courses_banner_item_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>