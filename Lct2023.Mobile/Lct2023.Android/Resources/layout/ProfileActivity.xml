<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/backgroundDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/profile_header_container"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/background">

        <com.google.android.material.appbar.MaterialToolbar 
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:id="@+id/toolbar_inner"
                                                    style="@style/AppTheme.Toolbar.Inner"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="64dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/profile_top_header_layout"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        app:layout_constraintTop_toBottomOf="@id/toolbar_inner"
                                                        android:paddingTop="16dp">

    <com.google.android.material.card.MaterialCardView android:id="@+id/profile_avatar_background"
                                                        app:layout_constraintTop_toTopOf="@id/profile_header_layout"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="@id/profile_header_layout"
                                                        style="@style/AppTheme.MaterialCardView.White"
                                                        app:cardCornerRadius="50dp"
                                                        android:layout_width="48dp"
                                                        android:layout_height="48dp"
                                                        android:layout_marginLeft="16dp"
                                                        app:cardElevation="0dp"
                                                        app:contentPadding="0dp">

        <ImageView android:id="@+id/toolbar_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_circle"
                    app:tint="@color/iconPrimary"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:paddingHorizontal="8dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintStart_toEndOf="@id/profile_avatar_background"
                                                        app:layout_constraintEnd_toStartOf="@+id/profile_settings_button"
                                                        android:id="@+id/profile_header_layout">

        <TextView android:id="@+id/profile_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:lines="1"
                    style="@style/AppTheme.H4"
                    android:text="No name"
                    app:layout_constraintBottom_toTopOf="@id/profile_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        <TextView android:id="@+id/profile_login"
                    android:text="@anonymous"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Body"
                    android:textColor="@color/gray"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_username" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton android:id="@+id/profile_settings_button"
                                                        android:layout_height="24dp"
                                                        android:layout_width="24dp"
                                                        app:icon="@drawable/ic_setting"
                                                        android:layout_marginEnd="16dp"
                                                        app:rippleColor="?attr/colorControlHighlight"
                                                        app:layout_constraintTop_toTopOf="@id/profile_header_layout"
                                                        app:layout_constraintBottom_toBottomOf="@id/profile_header_layout"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintStart_toEndOf="@id/profile_header_layout"
                                                        style="@style/AppTheme.Button.Image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

     </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:paddingTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_header_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                            android:layout_height="match_parent">

            <!-- Stats -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/profile_statistics_frame"
                                                               style="@style/AppTheme.MaterialCardView.White"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:contentPadding="16dp"
                                                               app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView android:id="@+id/profile_points_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="wrap_content"
                                                                       app:cardBackgroundColor="@color/bgIslandInner"
                                                                       app:cardCornerRadius="16dp"
                                                                       app:cardElevation="0dp"
                                                                       app:contentPadding="16dp"
                                                                       app:layout_constraintEnd_toStartOf="@id/profile_ranking_layout"
                                                                       app:layout_constraintStart_toStartOf="parent"
                                                                       app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="match_parent">

                            <TextView android:id="@+id/profile_points_text"
                                      style="@style/AppTheme.BodyMedium"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:ellipsize="end"
                                      android:lines="1"
                                      android:text="724"
                                      android:textSize="20sp"
                                      app:layout_constrainedWidth="true"
                                      app:layout_constraintEnd_toStartOf="@id/profile_points_image"
                                      app:layout_constraintHorizontal_bias="0"
                                      app:layout_constraintHorizontal_chainStyle="packed"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toTopOf="parent"/>

                            <ImageView android:id="@+id/profile_points_image"
                                       android:layout_width="20dp"
                                       android:layout_height="20dp"
                                       android:layout_marginStart="4dp"
                                       android:src="@drawable/ic_crown"
                                       app:layout_constraintBottom_toBottomOf="@id/profile_points_text"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/profile_points_text"
                                       app:layout_constraintTop_toTopOf="@id/profile_points_text"
                                       app:tint="@color/accent"/>

                            <TextView style="@style/AppTheme.Body"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Всего баллов"
                                      android:textSize="12sp"
                                      app:layout_constraintTop_toBottomOf="@+id/profile_points_text"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView android:id="@+id/profile_ranking_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="0dp"
                                                                       android:layout_marginStart="16dp"
                                                                       app:cardCornerRadius="16dp"
                                                                       app:cardElevation="0dp"
                                                                       app:contentPadding="16dp"
                                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintStart_toEndOf="@id/profile_points_layout"
                                                                       app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="match_parent">

                            <TextView android:id="@+id/profile_ranking_text"
                                      style="@style/AppTheme.BodyMedium"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:ellipsize="end"
                                      android:lines="1"
                                      android:text="3 место"
                                      android:textSize="20sp"
                                      app:layout_constrainedWidth="true"
                                      app:layout_constraintEnd_toStartOf="@id/profile_ranking_image"
                                      app:layout_constraintHorizontal_bias="0"
                                      app:layout_constraintHorizontal_chainStyle="packed"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toTopOf="parent"/>

                            <ImageView android:id="@+id/profile_ranking_image"
                                       android:layout_width="20dp"
                                       android:layout_height="20dp"
                                       android:layout_marginStart="4dp"
                                       android:src="@drawable/ic_ranking"
                                       app:layout_constraintBottom_toBottomOf="@id/profile_ranking_text"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/profile_ranking_text"
                                       app:layout_constraintTop_toTopOf="@id/profile_ranking_text"
                                       app:tint="@color/accent"/>

                            <TextView style="@style/AppTheme.Body"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:text="Среди друзей"
                                      android:textSize="12sp"
                                      app:layout_constraintTop_toBottomOf="@+id/profile_ranking_text"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_rating_table_button"
                                                                        android:layout_marginTop="16dp"
                                                                        style="@style/AppTheme.Button.Chevron"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="wrap_content"
                                                                        android:text="Таблица рейтинга"
                                                                        app:backgroundTint="#4DC7BBDC"
                                                                        app:layout_constraintTop_toBottomOf="@id/profile_points_layout"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Daily bonus -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_daily_bonus_island"
                style="@style/AppTheme.MaterialCardView.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:contentPaddingBottom="16dp"
                app:contentPaddingTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/profile_statistics_frame">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                android:layout_height="wrap_content">

                <TextView android:id="@+id/profile_daily_bonus_title"
                            style="@style/AppTheme.H4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ежедневные награды"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <mvvmcross.platforms.android.binding.views.MvxLinearLayout
                            android:id="@+id/profile_daily_bonus_collection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintTop_toBottomOf="@id/profile_daily_bonus_title"
                            android:orientation="vertical"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_daily_bonus_button"
                                                            app:rippleColor="?attr/colorControlHighlight"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Получить награду"
                                                            app:layout_constraintTop_toBottomOf="@id/profile_daily_bonus_collection"
                                                            style="@style/AppTheme.Button.Action.Primary"
                                                            android:layout_marginTop="16dp"
                                                            android:layout_marginHorizontal="16dp"
                                                            android:backgroundTint="@color/lightPurple"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Rate -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/profile_rate_frame"
                                                               style="@style/AppTheme.MaterialCardView.White"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="8dp"
                                                               app:layout_constraintTop_toBottomOf="@id/profile_daily_bonus_island">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content"
                                                                   android:padding="16dp">

                    <TextView android:id="@+id/profile_rate_title"
                              style="@style/AppTheme.H4"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:text="Оцените приложение"
                              app:layout_constraintEnd_toStartOf="@id/profile_rate_button"
                              android:layout_marginEnd="16dp"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_rate_button"
                                                                       style="@style/AppTheme.Button.Chevron"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintTop_toTopOf="@id/profile_rate_title"
                                                                       app:layout_constraintBottom_toBottomOf="@id/profile_rate_title"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Achievs -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/profile_achievs_island"
                    style="@style/AppTheme.MaterialCardView.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:contentPaddingBottom="16dp"
                    app:contentPaddingTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_rate_frame">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/profile_achievs_title"
                                style="@style/AppTheme.H4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Достижения"
                                android:layout_marginHorizontal="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_achievs_button"
                                                                       android:text="Все достижения"
                                                                       android:layout_marginEnd="16dp"
                                                                       style="@style/AppTheme.Button.Chevron"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintTop_toTopOf="@id/profile_achievs_title"
                                                                       app:layout_constraintBottom_toBottomOf="@id/profile_achievs_title"/>

                    
                    <mvvmcross.droidx.recyclerview.MvxRecyclerView android:id="@+id/profile_achievs_collection"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_marginTop="16dp"
                                                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                                    android:paddingHorizontal="16dp"
                                                                    android:clipToPadding="false"
                                                                    app:layout_constraintTop_toBottomOf="@id/profile_achievs_title"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Friends -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/profile_friends_island"
                    style="@style/AppTheme.MaterialCardView.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:contentPaddingBottom="16dp"
                    app:contentPaddingTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_achievs_island">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/profile_friends_title"
                                style="@style/AppTheme.H4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Топ-5 друзей"
                                android:layout_marginHorizontal="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_friends_button"
                                                                       android:text="Все друзья"
                                                                       android:layout_marginEnd="16dp"
                                                                       style="@style/AppTheme.Button.Chevron"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintTop_toTopOf="@id/profile_friends_title"
                                                                       app:layout_constraintBottom_toBottomOf="@id/profile_friends_title"/>

                    
                    <mvvmcross.droidx.recyclerview.MvxRecyclerView android:id="@+id/profile_friends_collection"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_margin="16dp"
                                                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                                    app:layout_constraintTop_toBottomOf="@id/profile_friends_title"/>

                    
                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_add_friend_button"
                                                            app:rippleColor="?attr/colorControlHighlight"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Добавить друзей"
                                                            app:layout_constraintTop_toBottomOf="@id/profile_friends_collection"
                                                            style="@style/AppTheme.Button.Action.Primary"
                                                            android:layout_marginHorizontal="16dp"
                                                            android:backgroundTint="@color/lightPurple"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Courses -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/profile_rate"
                                                               style="@style/AppTheme.MaterialCardView.White"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="8dp"
                                                               app:layout_constraintTop_toBottomOf="@id/profile_friends_island">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content"
                                                                   android:padding="16dp">

                    <TextView android:id="@+id/profile_courses_title"
                              style="@style/AppTheme.H4"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:text="Купленные курсы"
                              app:layout_constraintEnd_toStartOf="@id/profile_all_courses_button"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/profile_all_courses_button"
                                                                       style="@style/AppTheme.Button.Chevron"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       android:text="Все курсы"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.card.MaterialCardView android:id="@+id/profile_course_1_layout"
                                                                       style="@style/AppTheme.MaterialCardView.White"
                                                                       android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"
                                                                       android:layout_marginTop="16dp"
                                                                       app:cardBackgroundColor="@color/bgIslandInner"
                                                                       app:contentPaddingBottom="16dp"
                                                                       app:contentPaddingTop="16dp"
                                                                       app:layout_constraintTop_toBottomOf="@id/profile_courses_title">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="wrap_content">

                            <ImageView android:id="@+id/profile_course_1_image"
                                       android:layout_width="64dp"
                                       android:layout_height="64dp"
                                       android:layout_marginStart="16dp"
                                       android:scaleType="fitCenter"
                                       android:src="@drawable/image_course_guitar"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintVertical_bias="0"/>

                            <TextView android:id="@+id/profile_course_1_title"
                                      style="@style/AppTheme.BodyMedium"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:layout_marginHorizontal="16dp"
                                      android:text="Гитара"
                                      android:textSize="18sp"
                                      app:layout_constraintBottom_toTopOf="@id/profile_course_1_availability"
                                      app:layout_constraintEnd_toStartOf="@id/profile_course_1_chevron"
                                      app:layout_constraintStart_toEndOf="@id/profile_course_1_image"
                                      app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintVertical_chainStyle="packed"/>

                            <TextView android:id="@+id/profile_course_1_availability"
                                      style="@style/AppTheme.Secondary.Small"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:text="Куплено 2 курса"
                                      app:layout_constraintBottom_toBottomOf="@id/profile_course_1_image"
                                      app:layout_constraintEnd_toEndOf="@id/profile_course_1_title"
                                      app:layout_constraintStart_toStartOf="@id/profile_course_1_title"
                                      app:layout_constraintTop_toBottomOf="@id/profile_course_1_title"/>

                            <ImageView android:id="@+id/profile_course_1_chevron"
                                       android:layout_width="20dp"
                                       android:layout_height="20dp"
                                       android:layout_marginEnd="16dp"
                                       android:scaleType="fitCenter"
                                       android:src="@drawable/ic_chevron_right"
                                       app:layout_constraintBottom_toBottomOf="@id/profile_course_1_image"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView android:id="@+id/profile_course_2_layout"
                                                                       style="@style/AppTheme.MaterialCardView.White"
                                                                       android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"
                                                                       android:layout_marginTop="16dp"
                                                                       app:cardBackgroundColor="@color/bgIslandInner"
                                                                       app:contentPaddingBottom="16dp"
                                                                       app:contentPaddingTop="16dp"
                                                                       app:layout_constraintTop_toBottomOf="@id/profile_course_1_layout">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="wrap_content">

                            <ImageView android:id="@+id/profile_course_2_image"
                                       android:layout_width="64dp"
                                       android:layout_height="64dp"
                                       android:layout_marginStart="16dp"
                                       android:scaleType="fitCenter"
                                       android:src="@drawable/image_course_french_horn"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintVertical_bias="0"/>

                            <TextView android:id="@+id/profile_course_2_title"
                                      style="@style/AppTheme.BodyMedium"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:layout_marginHorizontal="16dp"
                                      android:text="Валторна"
                                      android:textSize="18sp"
                                      app:layout_constraintBottom_toTopOf="@id/profile_course_2_availability"
                                      app:layout_constraintEnd_toStartOf="@id/profile_course_2_chevron"
                                      app:layout_constraintStart_toEndOf="@id/profile_course_2_image"
                                      app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintVertical_chainStyle="packed"/>

                            <TextView android:id="@+id/profile_course_2_availability"
                                      style="@style/AppTheme.Secondary.Small"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:text="Куплен 1 курс"
                                      app:layout_constraintBottom_toBottomOf="@id/profile_course_2_image"
                                      app:layout_constraintEnd_toEndOf="@id/profile_course_2_title"
                                      app:layout_constraintStart_toStartOf="@id/profile_course_2_title"
                                      app:layout_constraintTop_toBottomOf="@id/profile_course_2_title"/>

                            <ImageView android:id="@+id/profile_course_2_chevron"
                                       android:layout_width="20dp"
