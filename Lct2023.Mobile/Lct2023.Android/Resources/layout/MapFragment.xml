<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header_island_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationY="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">

            <com.google.android.gms.maps.MapView android:id="@+id/map_view"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/location_filters_button"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               app:iconPadding="8dp"
                                                               app:cornerRadius="8dp"
                                                               app:layout_constraintLeft_toLeftOf="parent"
                                                               app:layout_constraintBottom_toBottomOf="parent"
                                                               style="@style/AppTheme.Button.Image"
                                                               android:layout_marginLeft="16dp"
                                                               android:layout_marginBottom="24dp"
                                                               app:icon="@drawable/ic_filters"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/gps_button"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               app:iconPadding="8dp"
                                                               app:cornerRadius="8dp"
                                                               app:layout_constraintRight_toRightOf="parent"
                                                               app:layout_constraintBottom_toBottomOf="parent"
                                                               style="@style/AppTheme.Button.Image"
                                                               android:layout_marginRight="16dp"
                                                               android:layout_marginBottom="24dp"
                                                               app:icon="@drawable/ic_gps"/>

            <com.google.android.material.button.MaterialButtonToggleGroup android:id="@+id/zoom_buttons_group"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="wrap_content"
                                                                          android:background="@color/bgIslandInner"
                                                                          android:orientation="vertical"
                                                                          app:layout_constraintBottom_toBottomOf="@id/gps_button">

                <com.google.android.material.button.MaterialButton android:id="@+id/zoom_in_button"
                                                                   android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   app:iconPadding="8dp"
                                                                   app:cornerRadius="8dp"
                                                                   style="@style/AppTheme.Button.Image"
                                                                   android:layout_weight="1"
                                                                   app:icon="@drawable/ic_plus_circle"/>

                <com.google.android.material.button.MaterialButton android:id="@+id/zoom_out_button"
                                                                   android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   app:iconPadding="8dp"
                                                                   app:cornerRadius="8dp"
                                                                   style="@style/AppTheme.Button.Image"
                                                                   android:layout_weight="1"
                                                                   app:icon="@drawable/ic_minus_circle"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/location_info_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="16dp"
                app:shapeAppearanceOverlay="@style/TopRoundedShape"
                app:contentPaddingTop="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_alignParentBottom="true"
                                                               android:orientation="vertical"
                                                               app:behavior_hideable="false"
                                                               app:behavior_peekHeight="0dp"
                                                               app:layout_behavior="@string/bottom_sheet_behavior">

                <View
                        android:id="@+id/bs_header_line"
                        android:layout_width="29dp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/bgIslandInner"
                        android:clickable="true"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_island_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shapeAppearanceOverlay="@style/BottomRoundedShape"
            app:contentPaddingBottom="24dp"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/Toolbar"
                    android:id="@+id/toolbar"/>

            <com.google.android.material.textfield.TextInputLayout android:id="@+id/locations_search_layout"
                                                                   android:layout_width="match_parent"
                                                                   android:layout_height="match_parent"
                                                                   app:layout_constraintTop_toBottomOf="@id/toolbar"
                                                                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                                   android:background="@drawable/search_layout_background"
                                                                   android:paddingHorizontal="16dp"
                                                                   android:paddingBottom="16dp"
                                                                   android:layout_marginHorizontal="16dp"
                                                                   android:layout_marginBottom="16dp"
                                                                   app:boxBackgroundColor="@color/bgIslandInner"
                                                                   app:boxCornerRadiusBottomEnd="12dp"
                                                                   app:boxCornerRadiusBottomStart="12dp"
                                                                   app:boxCornerRadiusTopEnd="12dp"
                                                                   app:boxCornerRadiusTopStart="12dp"
                                                                   app:boxStrokeWidth="0dp"
                                                                   app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText android:id="@+id/locations_search_value"
                                                                         android:layout_width="match_parent"
                                                                         android:layout_height="match_parent"
                                                                         android:hint="Поиск"
                                                                         android:padding="12dp"
                                                                         android:textColor="@color/textPrimary"
                                                                         android:textColorHint="@color/textSecondary"
                                                                         android:textSize="@dimen/textSmall"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButtonToggleGroup android:id="@+id/location_types_group"
                                                                          android:layout_width="match_parent"
                                                                          android:layout_height="wrap_content"
                                                                          android:background="@color/bgIslandInner"
                                                                          android:padding="2dp"
                                                                          android:layout_marginHorizontal="16dp"
                                                                          android:layout_marginTop="16dp"
                                                                          app:checkedButton="@id/msa_option"
                                                                          app:layout_constraintTop_toBottomOf="@id/locations_search_layout"
                                                                          app:selectionRequired="true"
                                                                          app:singleSelection="true">

                <com.google.android.material.button.MaterialButton android:id="@+id/msa_option"
                                                                   android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_weight="1"
                                                                   android:backgroundTint="@color/button_toggle_group_background_tint"/>

                <com.google.android.material.button.MaterialButton android:id="@+id/afisha_option"
                                                                   android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_weight="1"
                                                                   android:backgroundTint="@color/button_toggle_group_background_tint"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>