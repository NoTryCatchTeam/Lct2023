<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/text_exercise_answer_item_layout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:cardBackgroundColor="@color/backgroundDark"
                                                   app:cardCornerRadius="8dp"
                                                   app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:paddingHorizontal="8dp"
                                                       android:paddingVertical="12dp">

        <com.google.android.material.card.MaterialCardView android:id="@+id/text_exercise_answer_item_number_layout"
                                                           android:layout_width="28dp"
                                                           android:layout_height="28dp"
                                                           app:cardBackgroundColor="@color/background"
                                                           app:cardCornerRadius="8dp"
                                                           app:cardElevation="0dp"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintTop_toTopOf="parent">

            <TextView android:id="@+id/text_exercise_answer_item_number"
                      style="@style/AppTheme.BodyMedium.Small"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:text="1"
                      android:textAlignment="gravity"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView android:id="@+id/text_exercise_answer_item_text"
                  style="@style/AppTheme.BodyMedium"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="8dp"
                  android:ellipsize="end"
                  android:lines="1"
                  android:text="Дирижёр"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@id/text_exercise_answer_item_number_layout"
                  app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>