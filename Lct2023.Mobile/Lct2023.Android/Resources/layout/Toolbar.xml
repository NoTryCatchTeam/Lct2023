<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/bgIsland"
        android:elevation="0dp"
        app:menu="@menu/toolbar_menu"
        app:buttonGravity="center_vertical"
        app:contentInsetStart="10dp">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleColor="@color/bgIsland"
            style="@style/AppTheme.MaterialCardView.White"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="21dp"
            android:gravity="center_vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center_vertical">

            <ImageButton
                    android:background="@drawable/rounded_avatar_background"
                    android:id="@+id/avatar_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="12dp"/>

            <TextView
                    android:id="@+id/title"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Евгений"
                    android:textFontWeight="700"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.appbar.MaterialToolbar>