<?xml version="1.0" encoding="UTF-8" ?>
<com.google.android.material.card.MaterialCardView android:id="@+id/feed_art_directions_island"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/AppTheme.MaterialCardView.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingBottom="16dp"
        app:contentPaddingTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

        <TextView android:id="@+id/feed_art_dir_schools_header_title"
                    style="@style/AppTheme.H4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="Школы МШИ"
                    app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/feed_art_dir_schools_header_description"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/AppTheme.Body"
                  android:text="По данному направлению в Москве работают несколько школ, список которых вы сможете найти на карте."
                  android:layout_marginTop="8dp"
                  android:layout_marginHorizontal="16dp"
                  app:layout_constraintTop_toBottomOf="@id/feed_art_dir_schools_header_title" />

        <com.google.android.material.button.MaterialButton android:id="@+id/feed_art_dir_schools_header_map_button"
                                                            style="@style/AppTheme.Button.Chevron"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Школы МШИ по направлению на карте"
                                                            android:layout_marginHorizontal="16dp"
                                                            android:layout_marginTop="24dp"
                                                            app:layout_constraintBottom_toBottomOf="parent"
                                                            app:layout_constraintTop_toBottomOf="@id/feed_art_dir_schools_header_description"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
