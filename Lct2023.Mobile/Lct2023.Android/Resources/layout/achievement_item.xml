<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="160dp"
                                                   android:layout_height="160dp"
                                                   app:cardBackgroundColor="@color/bgIslandInner"
                                                   app:cardCornerRadius="@dimen/default_corner_radius"
                                                   app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <ImageView android:id="@+id/achievement_item_image"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/image_achievement_artist"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/achievement_item_title"
                  style="@style/AppTheme.BodyMedium.Small"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="12dp"
                  android:layout_marginBottom="6dp"
                  android:ellipsize="end"
                  android:gravity="center"
                  android:maxLines="1"
                  android:text="Игрок на струнах"
                  android:textAlignment="gravity"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>