<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/backgroundDark">

    <include layout="@layout/Toolbar"/>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="0dp"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">

            <mvvmcross.droidx.recyclerview.MvxRecyclerView android:id="@+id/main_stories"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:background="@drawable/top_view_island_background"
                                                           android:clipToPadding="false"
                                                           android:orientation="horizontal"
                                                           android:paddingHorizontal="16dp"
                                                           android:paddingTop="8dp"
                                                           android:paddingBottom="24dp"
                                                           app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.card.MaterialCardView android:id="@+id/main_statistics_layout"
                                                               style="@style/AppTheme.MaterialCardView.White"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="8dp"
                                                               app:contentPadding="16dp"
                                                               app:layout_constraintTop_toBottomOf="@id/main_stories">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView android:id="@+id/main_points_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="wrap_content"
                                                                       app:cardBackgroundColor="@color/accent"
                                                                       app:cardCornerRadius="16dp"
                                                                       app:cardElevation="0dp"
                                                                       app:contentPadding="16dp"
                                                                       app:layout_constraintEnd_toStartOf="@id/main_ranking_layout"
                                                                       app:layout_constraintStart_toStartOf="parent"
                                                                       app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="match_parent">

                            <ImageView android:id="@+id/main_points_image"
                                       android:layout_width="32dp"
                                       android:layout_height="32dp"
                                       android:scaleType="fitCenter"
                                       android:src="@drawable/ic_crown"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView android:id="@+id/main_points_text"
                                      style="@style/AppTheme.BodyBold"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="8dp"
                                      android:ellipsize="end"
                                      android:lines="1"
                                      android:text="724 балла"
                                      android:textColor="@color/textLight"
                                      android:textSize="18sp"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toBottomOf="@+id/main_points_image"/>

                            <TextView style="@style/AppTheme.BodyMedium.Small"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:text="рейтинга"
                                      android:textColor="@color/textLight"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toBottomOf="@+id/main_points_text"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView android:id="@+id/main_ranking_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="0dp"
                                                                       android:layout_marginStart="16dp"
                                                                       app:cardBackgroundColor="@color/bgIslandInner"
                                                                       app:cardCornerRadius="16dp"
                                                                       app:cardElevation="0dp"
                                                                       app:contentPadding="16dp"
                                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintStart_toEndOf="@id/main_points_layout"
                                                                       app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                           android:layout_height="match_parent">

                            <ImageView android:id="@+id/main_ranking_image"
                                       android:layout_width="32dp"
                                       android:layout_height="32dp"
                                       android:scaleType="fitCenter"
                                       android:src="@drawable/ic_ranking"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:tint="@color/lightPurple"/>

                            <TextView android:id="@+id/main_ranking_text"
                                      style="@style/AppTheme.BodyBold"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="8dp"
                                      android:ellipsize="end"
                                      android:lines="1"
                                      android:text="3 место"
                                      android:textColor="@color/textLink"
                                      android:textSize="18sp"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toBottomOf="@+id/main_ranking_image"/>

                            <TextView style="@style/AppTheme.BodyMedium.Small"
                                      android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:text="рейтинга"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toBottomOf="@+id/main_ranking_text"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView style="@style/AppTheme.MaterialCardView.White"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginTop="8dp"
                                                               app:contentPaddingBottom="24dp"
                                                               app:contentPaddingLeft="16dp"
                                                               app:contentPaddingRight="16dp"
                                                               app:contentPaddingTop="24dp"
                                                               app:layout_constraintTop_toBottomOf="@id/main_statistics_layout">

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content">

                    <TextView android:id="@+id/main_events_title"
                              style="@style/AppTheme.H4"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:text="События"
                              app:layout_constraintEnd_toStartOf="@id/main_all_events_button"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton android:id="@+id/main_all_events_button"
                                                                       style="@style/AppTheme.Button.Base"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       android:backgroundTint="@color/bgIslandInner"
                                                                       android:paddingHorizontal="12dp"
                                                                       android:paddingVertical="4dp"
                                                                       android:text="Все"
                                                                       android:textColor="@color/textPrimary"
                                                                       android:textSize="14sp"
                                                                       app:cornerRadius="30dp"
                                                                       app:icon="@drawable/ic_chevron_right"
                                                                       app:iconGravity="textEnd"
                                                                       app:iconPadding="4dp"
                                                                       app:iconSize="16dp"
                                                                       app:iconTint="@color/iconPrimary"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main_event_1_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="wrap_content"
                                                                       android:layout_marginTop="16dp"
                                                                       android:background="@drawable/event_card_background"
                                                                       app:layout_constraintEnd_toStartOf="@id/main_event_2_layout"
                                                                       app:layout_constraintStart_toStartOf="parent"
                                                                       app:layout_constraintTop_toBottomOf="@id/main_events_title">

                        <ImageView android:layout_width="0dp"
                                   android:layout_height="0dp"
                                   android:layout_marginStart="40dp"
                                   android:layout_marginTop="40dp"
                                   android:scaleType="fitEnd"
                                   android:src="@drawable/image_violin"
                                   app:layout_constraintBottom_toBottomOf="parent"
                                   app:layout_constraintDimensionRatio="1:1"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintHorizontal_bias="1"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent"/>

                        <TextView style="@style/AppTheme.BodyMedium"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_margin="16dp"
                                  android:maxLines="3"
                                  android:text="Ночной концерт в МШИ"
                                  android:textColor="@color/textLight"
                                  app:layout_constraintBottom_toBottomOf="parent"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toTopOf="parent"
                                  app:layout_constraintVertical_bias="0"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main_event_2_layout"
                                                                       android:layout_width="0dp"
                                                                       android:layout_height="0dp"
                                                                       android:layout_marginStart="16dp"
                                                                       android:background="@drawable/event_card_background"
                                                                       app:layout_constraintBottom_toBottomOf="@id/main_event_1_layout"
                                                                       app:layout_constraintEnd_toEndOf="parent"
                                                                       app:layout_constraintStart_toEndOf="@id/main_event_1_layout"
                                                                       app:layout_constraintTop_toTopOf="@id/main_event_1_layout">

                        <ImageView android:layout_width="0dp"
                                   android:layout_height="0dp"
                                   android:layout_marginStart="40dp"
                                   android:layout_marginTop="40dp"
                                   android:scaleType="fitEnd"
                                   android:src="@drawable/image_cylinder"
                                   app:layout_constraintBottom_toBottomOf="parent"
                                   app:layout_constraintDimensionRatio="1:1"
                                   app:layout_constraintEnd_toEndOf="parent"
                                   app:layout_constraintHorizontal_bias="1"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent"/>

                        <TextView style="@style/AppTheme.BodyMedium"
                                  android:layout_width="0dp"
                                  android:layout_height="0dp"
                                  android:layout_margin="16dp"
                                  android:maxLines="3"
                                  android:text="Открытый урок игры на фортепиано"
                                  android:textColor="@color/textLight"
                                  app:layout_constraintBottom_toBottomOf="parent"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toTopOf="parent"
                                  app:layout_constraintVertical_bias="0"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
