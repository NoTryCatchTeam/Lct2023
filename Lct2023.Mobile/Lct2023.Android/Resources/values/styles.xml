<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/backgroundDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DatePickerDialog</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogPositiveButtonStyle</item>
    </style>

    <style name="AppTheme.DialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="AppTheme.DialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="AppTheme.DatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
        <item name="background">@color/bgIsland</item>
        <item name="elevation">0dp</item>
        <item name="contentInsetStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="menu">@menu/toolbar_menu</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="AppTheme.Toolbar.Inner" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
        <item name="background">@color/bgIsland</item>
        <item name="elevation">0dp</item>
        <item name="contentInsetStart">16dp</item>
        <item name="menu">@menu/toolbar_menu_close</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleTextAppearance</item>
        <item name="titleTextColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTextAppearance" parent="AppTheme">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Text styles: body -->
    <style name="AppTheme.Body.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.Body" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.BodyMedium.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.BodyMedium" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.BodyBold.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.BodyBold" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <!-- Text styles: secondary -->
    <style name="AppTheme.Secondary.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.Secondary" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.SecondaryMedium.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.SecondaryMedium" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.SecondaryBold.Small" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="AppTheme.SecondaryBold" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.H3" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.H4" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Tasks.Stats.Counter" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AppTheme.Tasks.Stats.Label" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout" parent="">
        <item name="colorControlActivated">@color/textPrimary</item>
    </style>

    <style name="ThemeOverlay.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Containers styles -->
    <style name="AppTheme.MaterialCardView.White" parent="AppTheme">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/bgIsland</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="AppTheme.MaterialCardView.Icon" parent="AppTheme">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/bgIslandInner</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Buttons styles -->
    <style name="AppTheme.Button.Base" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="backgroundTint">@color/lightPurple</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AppTheme.Button.Image" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/iconPrimary</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="AppTheme.Button.Chevron" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="backgroundTint">@color/bgIslandInner</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
        <item name="cornerRadius">30dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">4dp</item>
        <item name="iconSize">16dp</item>
        <item name="icon">@drawable/ic_chevron_right</item>
        <item name="iconTint">@color/iconPrimary</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="AppTheme.Button.Action.Primary" parent="AppTheme.Button.Base">
        <item name="android:textColor">@color/textLight</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppTheme.Button.Action.Secondary" parent="AppTheme.Button.Action.Primary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="backgroundTint">@color/bgIslandInner</item>
    </style>

    <!-- Other styles -->
    <style name="AppTheme.Tasks.Stats.ProgressBar" parent="AppTheme">
        <item name="indicatorColor">@color/accent</item>
        <item name="trackColor">@color/bgGlobe</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <style name="BottomRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/default_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/default_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="TopRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/default_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/default_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="AppTheme.Loader.Default" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/accent</item>
        <item name="indicatorSize">32dp</item>
    </style>

    <style name="AppTheme.Button.Image.Social" parent="AppTheme.Button.Image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/bgIslandInner</item>
    </style>

    <style name="AppTheme.TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="theme">@style/ThemeOverlay.TextInputLayout</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AppTheme.Checkbox" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="buttonTint">@color/lightPurple</item>
        <item name="paddingStart">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.RadioButton" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="buttonTint">@color/lightPurple</item>
        <item name="paddingStart">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

</resources>

