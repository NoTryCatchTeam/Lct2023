<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/onboarding_scene_step_1">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-50dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:translationY="-50dp"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_2">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-50dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:translationY="-50dp"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_3">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-50dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="220dp"
                    android:translationY="-50dp"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_4">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-50dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:translationY="-50dp"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_5">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-50dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="300dp"
                    android:translationY="-50dp"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_6">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="100dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:rotation="180"
                    android:translationY="100dp"
                    app:layout_constraintBottom_toTopOf="@id/onboarding_info"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_7">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="120dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:rotation="180"
                    android:translationY="120dp"
                    app:layout_constraintBottom_toTopOf="@id/onboarding_info"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_scene_step_8">
        <Constraint android:id="@+id/onboarding_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="140dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@+id/onboarding_info_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="300dp"
                    android:rotation="180"
                    android:translationY="140dp"
                    app:layout_constraintBottom_toTopOf="@id/onboarding_info"
                    app:layout_constraintStart_toStartOf="@id/onboarding_info"/>
    </ConstraintSet>

    <Transition android:id="@+id/onboarding_scene_transition_1_2"
                app:constraintSetEnd="@id/onboarding_scene_step_2"
                app:constraintSetStart="@+id/onboarding_scene_step_1"
                app:duration="300"/>

    <Transition android:id="@+id/onboarding_scene_transition_2_3"
                app:constraintSetEnd="@id/onboarding_scene_step_3"
                app:constraintSetStart="@id/onboarding_scene_step_2"
                app:duration="300"/>

    <Transition android:id="@+id/onboarding_scene_transition_3_4"
                app:constraintSetEnd="@id/onboarding_scene_step_4"
                app:constraintSetStart="@+id/onboarding_scene_step_3"
                app:duration="300"/>

    <Transition android:id="@+id/onboarding_scene_transition_4_5"
                app:constraintSetEnd="@id/onboarding_scene_step_5"
                app:constraintSetStart="@+id/onboarding_scene_step_4"
                app:duration="300"/>

    <Transition android:id="@+id/onboarding_scene_transition_5_6"
                app:constraintSetEnd="@id/onboarding_scene_step_6"
                app:constraintSetStart="@+id/onboarding_scene_step_5"
                app:duration="300">
        <KeyFrameSet>
            <KeyAttribute android:alpha="0"
                          app:framePosition="5"
                          app:motionTarget="@+id/onboarding_info_arrow"/>
            <KeyAttribute android:alpha="0"
                          app:framePosition="95"
                          app:motionTarget="@+id/onboarding_info_arrow"/>
        </KeyFrameSet>
    </Transition>

    <Transition android:id="@+id/onboarding_scene_transition_6_7"
                app:constraintSetEnd="@id/onboarding_scene_step_7"
                app:constraintSetStart="@+id/onboarding_scene_step_6"
                app:duration="300"/>

    <Transition android:id="@+id/onboarding_scene_transition_7_8"
                app:constraintSetEnd="@id/onboarding_scene_step_8"
                app:constraintSetStart="@+id/onboarding_scene_step_7"
                app:duration="300"/>
</MotionScene>
